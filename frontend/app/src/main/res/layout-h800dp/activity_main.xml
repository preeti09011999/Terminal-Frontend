<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Terminal"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="34sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/about_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A simple, secure and reliable way for institutions to mark attendance of their students."
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@+id/app_title"  />

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:src="@drawable/banner_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_app"
        app:layout_constraintBottom_toTopOf="@+id/tc_link"  />

    <TextView
        android:id="@+id/tc_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-light"
        android:text="Tap Agree and Continue to accept the Terms of Service and Privacy Policy.\nAlready Signup? Login"
        android:textColorLink="@color/colorMatteGreen"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        app:layout_constraintBottom_toTopOf="@+id/agree_btn"
        app:layout_constraintTop_toBottomOf="@+id/about_app"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/agree_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agree and Continue"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/full_width_btn"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>